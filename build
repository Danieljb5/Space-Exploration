#!/bin/bash
SRCDIR=src
SRCS=$(find $SRCDIR -name *.cpp)
g++ -c $SRCS -I src -I src/headers
g++ -O *.o -o "Space Exploration" -I src/source -I src/headers -lsfml-graphics -lsfml-window -lsfml-system
g++ -O *.o -o "Space Exploration.exe" -I src/source -I src/headers -lsfml-graphics -lsfml-window -lsfml-system
mkdir out
mv "Space Exploration" out
mv "Space Exploration.exe" out
rm *.o
cp assets out -r
